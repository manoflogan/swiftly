<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Swiftly" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/textColourPrimary</item>
        <item name="colorOnPrimary">@color/textColourOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/textColourSecondary</item>
        <item name="colorSecondaryVariant">@color/textColourSecondaryVariant</item>
        <item name="colorOnSecondary">@color/textColourOnSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Swiftly.CardView" parent="CardView">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardBackgroundColor">@color/textColourOnPrimary</item>
    </style>

    <style name="Swiftly.TextAppearance" parent="@android:style/TextAppearance">
        <item name="lineHeight">20sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="Swiftly.TextAppearance.Secondary">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>
    <style name="Swiftly.TextAppearance.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Swiftly.TextAppearance.Headline">
        <item name="android:textSize">18sp</item>
    </style>
</resources>