<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Swiftly" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Swiftly.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <style name="Theme.Swiftly.AppBarOverlay" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="titleTextAppearance">@style/TextAppearance.AppCompat.Widget.ActionBar.Title</item>
        <item name="colorControlNormal">?attr/colorPrimaryDark</item>
    </style>

    <style name="Swiftly.TextAppearance" parent="@android:style/TextAppearance">
        <item name="lineHeight">20sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="Swiftly.TextAppearance.Secondary">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>
    <style name="Swiftly.TextAppearance.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Swiftly.TextAppearance.Headline">
        <item name="android:textSize">18sp</item>
    </style>
</resources>